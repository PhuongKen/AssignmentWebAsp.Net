@model AssignmentWebASP.NET.Models.Customer
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top: 50px">
    <div class="row">
        <div class="col-xl-3 col-md-3"></div>
        <div class="col-xl-6 col-md-6 col-12">
            <div class="login-page">
                <div class="login-form form">
                    <div class="block-title" style="text-align: center">
                        <h2 class="title"><span>Đăng nhập</span></h2>
                    </div>
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label>Email</label>
                            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>Mật khẩu</label>
                            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                        </div>
                        <label class="field-validation-error" style="text-align:center; color: red">@Html.DisplayFor(model => model.LoginErrorMessage)</label>
                        <div class="form-group text-center">
                            <input type="submit" class="btn btn-primary" value="Đăng nhập">
                            <input type="reset" class="btn btn-primary" value="Làm lại" />
                        </div>
                    }
                </div>
                <div class="col-xl-3 col-md-3"></div>
            </div>
        </div>
    </div>
</div>

